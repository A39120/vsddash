<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android" >
	<data/>
	
	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/grid"
		android:weightSum="2"
		android:layout_margin="@dimen/margin_default"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:baselineAligned="false">
		
		<!-- First Row -->
		<LinearLayout
			android:id="@+id/first_row"
			android:layout_margin="@dimen/margin_default"
			android:orientation="horizontal"
			android:weightSum="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
			<LinearLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent" >
				<androidx.cardview.widget.CardView
					android:id="@+id/nsg_list_option"
					android:foreground="?android:attr/selectableItemBackground"
					android:layout_marginEnd="@dimen/margin_default"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:clickable="true"
					android:focusable="true">
					<TextView
						android:layout_margin="@dimen/margin_default"
						android:text="@string/nsgs"
						android:layout_gravity="center"
						android:layout_width="match_parent"
						android:textAlignment="center"
						android:layout_height="match_parent"/>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			
			<LinearLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent" >
				<androidx.cardview.widget.CardView
					android:id="@+id/vrs_list_option"
					android:layout_marginStart="@dimen/margin_default"
					android:foreground="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:focusable="true">
					<TextView
						android:layout_margin="@dimen/margin_default"
						android:maxLines="4"
						android:text="@string/vrss"
						android:textAlignment="center"
						android:layout_gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			
		</LinearLayout>
		
		<!-- Second Row -->
		<LinearLayout
			android:id="@+id/second_row"
			android:layout_margin="@dimen/margin_default"
			android:orientation="horizontal"
			android:weightSum="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false">
		
			<LinearLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent" >
				<androidx.cardview.widget.CardView
					android:id="@+id/health_list_option"
					android:foreground="?android:attr/selectableItemBackground"
					android:clickable="true"
					android:layout_marginEnd="@dimen/margin_default"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:focusable="true">
					<TextView
						android:layout_margin="@dimen/margin_default"
						android:text="@string/vsd_health"
						android:textAlignment="center"
						android:layout_gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			
			<LinearLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content" >
				<androidx.cardview.widget.CardView
					android:id="@+id/vsp_list_option"
					android:foreground="?android:attr/selectableItemBackground"
					android:layout_marginStart="@dimen/margin_default"
					android:layout_gravity="center_vertical"
					android:clickable="true"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:focusable="true">
					<TextView
						android:layout_margin="@dimen/margin_default"
						android:maxLines="4"
						android:layout_gravity="center"
						android:textAlignment="center"
						android:text="@string/vsps"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			
		</LinearLayout>
			
		<LinearLayout
			android:layout_margin="@dimen/margin_default"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" >
			<androidx.cardview.widget.CardView
				android:id="@+id/settings"
				android:foreground="?android:attr/selectableItemBackground"
				android:clickable="true"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:focusable="true">
				<TextView
					android:layout_margin="@dimen/margin_default"
					android:maxLines="4"
					android:text="@string/settings"
					android:textAlignment="center"
					android:layout_gravity="center"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
		
	</LinearLayout>
</layout>